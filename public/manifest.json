{
  "name": "huiyou",
  "version": "0.0.1",
  "description": "",
  "permissions": [
    "*://*.bilibili.com/*",
    "tabs",
    "webRequest",
    "storage",
    "cookies"
  ],
  "icons": {
    "128": "img/tag.png"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_title": "洄游",
    "default_icon": "img/tag-browser.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["js/popup.js"],
      "css": ["css/popup.css"]
    }
  ],
  "web_accessible_resources": [
    "img/*"
  ],
  "options_page": "options.html",
  "manifest_version": 2
}
