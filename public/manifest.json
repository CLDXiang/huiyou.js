{
  "name": "huiyou",
  "version": "0.0.1",
  "description": "",
  "permissions": ["*://*.bilibili.com/*", "tabs", "webRequest"],
  "icons": {
    "128":"img/tag.png"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "browser_action": {
    "default_title": "洄游",
    "default_icon":"img/tag-browser.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["js/chunk-vendors.js", "js/popup.js"],
      "css": ["css/popup.css"]
    }
  ],
  "manifest_version": 2
}
